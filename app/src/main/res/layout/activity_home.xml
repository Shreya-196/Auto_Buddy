<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#F5F5F5">

    <!-- Logged-in User Info -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, user@example.com"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="24dp"
        />

    <!-- Offer a Ride Button -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/edit_text"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:focusable="true"
        android:id="@+id/offerRide">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageView
                android:src="@drawable/ride"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp" />

            <TextView
                android:text="Offer a Ride"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Find a Buddy Button -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/edit_text"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:focusable="true"
        android:id="@+id/findBuddy">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageView
                android:src="@drawable/buddy"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp" />

            <TextView
                android:text="Find a Buddy"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/edit_text"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:focusable="true"
        android:id="@+id/bookAuto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageView
                android:src="@drawable/rent"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:text="Book Auto"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Logout Button -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textColor="@color/black"
        android:background="@drawable/custom_button"
        android:padding="12dp"
        android:textStyle="bold"
        android:layout_marginTop="24dp" />
</LinearLayout>
